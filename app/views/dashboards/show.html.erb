 <span class="icon-circle-more"><i class="fa-solid fa-shield"></i></span>
 <p>Legal and policies</p>
 <% end %>
 <hr>
<%= link_to preferences_dashboard_path do%>
  <span class="icon-circle-more"><i class="fa-solid fa-question"></i></span>
 <p>Help & Feedback</p>
 <% end %>
<hr>
<%= link_to preferences_dashboard_path do%>
  <span class="icon-circle-more"><i class="fa-solid fa-info"></i></span>
 <p>About Us</p>
 <% end %>



</div>
