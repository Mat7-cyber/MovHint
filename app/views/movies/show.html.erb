<div class="movie-poster">
	<%= image_tag @movie.poster_path, class:"poster" %>
	<button type="button" class="button movie-trailer" data-bs-toggle="modal" data-bs-target="#exampleModal">
		<strong>WATCH TRAILER:</strong> <i class="fa-solid fa-play"></i>
	</button>
</div>



<% if current_user %>
	<div class="button-center">
		<button class="button-movie-favorite <%= "button-liked" if @liked %>"
		data-controller="event-listener"
		data-action="click->event-listener#enable">
		<i class="fa-solid fa-plus"></i>
		</button>
	</div>
<% end %>

<div class="container-show">

	<div class="movie-infos">

		<h1 class="movie-title"><strong><%= @movie.original_title%></strong></h1>

		<div class="movie-tagline">
				<h4 data-display-text-text-value="<%= @movie.tagline%>"
				data-display-text-target="text"
				data-controller="display-text"></h4>
		</div>

		<div class="infos">
			<h3><strong>RUNTIME:</strong></h3>
			<p class="number-crew-genre"><%= @movie.runtime%> minutes</p>
		</div>

		<div class="infos">
			<h3><strong>RELEASE DATE:</strong></h3>
			<p class="number-crew-genre"><%= @movie.release_date[0..3]%></p>
		</div>

		<div class="infos">
			<h3><strong>RATING:</strong></h3>
			<div class="infos-rating" data-controller="stars" data-stars-count-value="<%= @movie.vote_average.round(2)%>">
				<p class="number-crew-genre"
				data-stars-target="ratingNumber"
				><%= @movie.vote_average.round(2)%></p>
			</div>
		</div>

		<div class="infos">
			<h3><strong>SYNOPSIS:</strong></h3>
			<p class="number-crew-genre"><%= @movie.overview%></p>
		</div>

		<div class="infos">
			<h3><strong>DIRECTOR:</strong></h3>
			<p class="number-crew-genre">Brian Levant</p>
		</div>

		<div class="infos">
			<h3><strong>CASTING:</strong></h3>
			<div class="actors">
				<p class="number-crew-genre">Arnold Schwarzenegger</p>
				<p class="number-crew-genre">Jake Llyod</p>
				<p class="number-crew-genre">Phil Hartman</p>
			</div>
		</div>

		<div class="infos">
		<h3><strong>GENRES:</strong></h3>
			<div class="genres">
				<p class="number-crew-genre">Family</p>
				<p class="number-crew-genre">Comedy</p>
				<p class="number-crew-genre">Adventure</p>
			</div>
		</div>

	</div>

	<div class="movie-availability">
		<h3 class="stream-buy">Be moved !</h3>
		<a href="https://www.disneyplus.com/" target="_blank"><img src="<%= image_path('https://image.tmdb.org/t/p/original/97yvRBw1GzX7fXprcF80er19ot.jpg') %>" alt="Logo Disney+", class="stream_icon"/></a>
		<a href="https://tv.apple.com" target="_blank"><img src="<%= image_path('https://image.tmdb.org/t/p/original/9ghgSC0MA082EL6HLCW3GalykFD.jpg') %>" alt="Logo Apple TV", class="stream_icon"/></a>
	</div>

	<div class="movie-map">
		<h3 class="stream-buy">Move !</h3>
		<%= render "mapbox" %>
	</div>

</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" style="max-width: 400px;">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">

					<iframe width=100% height=100% src="https://www.youtube.com/watch?v=lVtetOjX_vk" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>

			</div>
		</div>
	</div>
</div>
